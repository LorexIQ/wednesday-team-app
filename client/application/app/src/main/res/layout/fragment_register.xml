<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/photo">

    <EditText
        android:id="@+id/numberRegister"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:background="@drawable/rea_auth_input_password"
        android:drawableLeft="@drawable/phone_input_icon"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Номер телефона"
        android:inputType="number"
        android:maxLength="11"
        android:paddingLeft="15dp"
        android:text="7"
        android:textColor="#99755F"
        android:textColorHint="#F3B085"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.395" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.10"
        android:text="Введите номер телефона и пароль"

        android:textColor="#99755F"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.332" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Регистрация "
        android:textSize="36dp"
        android:lineHeight="30.28dp"
        android:textColor="#848D68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233" />

    <TextView
        android:id="@+id/haveAccountAuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.05"
        android:text="Уже есть аккаунт? Авторизируйтесь"
        android:textColor="#F6E8DB"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.921"
        android:shadowColor="#321414"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="6"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="124dp"
        android:layout_height="102dp"
        android:background="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:backgroundTint="#F6E8DB"
        android:text="Зарегестрироваться"
        android:textAllCaps="false"
        android:textColor="#EA806F"
        android:textSize="20dp"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.751" />

    <EditText
        android:id="@+id/passRegisterRepeat"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:background="@drawable/rea_auth_input_password"
        android:drawableLeft="@drawable/pass_input_icon"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColor="#99755F"
        android:textColorHint="#F3B085"
        android:textSize="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.637" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.10"
        android:text="Подтвердите пароль"

        android:textColor="#99755F"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.561" />

    <EditText
        android:id="@+id/passRegister"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:background="@drawable/rea_auth_input_password"
        android:drawableLeft="@drawable/pass_input_icon"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColor="#99755F"
        android:textColorHint="#F3B085"
        android:textSize="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.481" />

</androidx.constraintlayout.widget.ConstraintLayout>